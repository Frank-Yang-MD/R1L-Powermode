<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mitsubishielectric.ahu.efw.vehiclepwrmgr" >

    <uses-permission android:name="com.mitsubishielectric.ahu.efw.common.permission.ACCESS_MELCO_EFW" />
    <uses-permission android:name="com.mitsubishielectric.ahu.efw.common.permission.ACCESS_MELCO_APPS" />
    <uses-permission android:name="com.mitsubishielectric.ahu.appservice.broadcastradioservice.permission.ACCESS_BROADCAST_RADIO" />
    <uses-permission android:name="com.mitsubishielectric.ahu.efw.vehiclepwrmgr.permission.ACCESS_MELCO_DAEMON" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS"/>
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL"/>
    <uses-permission android:name="android.permission.REAL_GET_TASKS"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="com.mitsubishielectric.ahu.fw.ACCESS_MELCO_PROJECTION_SERVICE" />

    <protected-broadcast android:name="com.mitsubishielectric.ahu.efw.vehiclepwrmgr.action.SHOW_HMI"/>

    <application
        android:persistent="true"
        android:label="VPFService"
        android:allowBackup="false">
        <service
            android:permission="com.mitsubishielectric.ahu.efw.common.permission.ACCESS_MELCO_EFW"
            android:name=".VehiclePowerService"
            android:exported="true"
            android:singleUser="true" >
        </service>
        <uses-library android:name="com.mitsubishielectric.ahu.efw.lib.vehiclepwrmgr" />
        <uses-library android:name="com.mitsubishielectric.ahu.efw.lib.extendedservicemanager" />
        <uses-library android:name="com.mitsubishielectric.ahu.efw.lib.logdogcommonclasslib" />
        <uses-library android:name="com.mitsubishielectric.ahu.efw.lib.vehicleconfigservice" />
        <receiver
            android:name=".VpsBootReceiver"
            android:exported="true">
            <intent-filter android:priority="100">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
